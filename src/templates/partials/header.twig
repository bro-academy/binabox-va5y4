<header class="header">
	<a href="{{ header.home_url }}" class="logo header__logo-link">
		<img src="{{ header.logo_url }}" alt="{{ header.logo_alt }}" class="logo header__logo-image">
	</a>
	<nav class="header__nav">
		<ul class="navigation-list">
			{% for item in header.navigation_items %}
				<li class="navigation-item{% if item.label|lower == current_page %} navigation-link--active{% endif %}">
					<a href="{{ item.url }}" class="navigation-link">{{ item.label }}</a>
				</li>
			{% endfor %}
		</ul>
	</nav>
	<div class="header__actions">
		<input type="search" id="search" name="search" placeholder="{{ header.search_placeholder }}" class="header__search">
		<span class="header__separator separator"></span>
		<a href="{{ header.discord_url }}" class="link header__discord-link">
			<img src="{{ header.discord_icon }}" alt="{{ header.discord_alt }}" class="header__discord-icon">
			{{ header.discord_label }}
		</a>
		<button type="button" class="button header__login-button">
			<img src="{{ header.login_icon }}" alt="{{ header.login_alt }}" class="header__login-icon">
			{{ header.login_label }}
		</button>
	</div>
</header>
