{% from '/ui/icon.twig' import icon %}

<blockquote class="article__quote">
	<p class="article__quote-text">{{ quote.text }}</p>
	<footer class="article__quote-footer">
		{{ icon('article__quote-rating-icon', "stars", 16, 16) }}
		<span class="article__quote-rating">{{ quote.rating }}</span>
		<span class="article__quote-source">{{ quote.source }}</span>
	</footer>
</blockquote>
