<footer class="footer">
	<section class="footer__brand">
		<a href="{{ footer.logo.href }}" class="logo footer__logo-link">
			<img src="{{ footer.logo.src }}" alt="{{ footer.logo.alt }}" class="logo footer__logo-image">
		</a>
		<p class="footer__description">{{ footer.description }}</p>
	</section>
	<nav class="footer__nav">
		<span class="footer__nav-title">{{ footer.nav.title }}</span>
		<ul class="footer__nav-list">
			{% for item in footer.nav.items %}
				<li class="footer__nav-item">
					<a href="{{ item.href }}" class="footer__nav-link">{{ item.text }}</a>
				</li>
			{% endfor %}
		</ul>
	</nav>
	<p class="footer__copyright">{{ footer.copyright }}</p>
	<address class="footer__socials">
		{% for social in footer.socials %}
			<a href="{{ social.href }}" aria-label="{{ social.label }}" class="footer__social-link">
				<img src="{{ social.icon.src }}" alt="{{ social.icon.alt }}" class="footer__social-icon">
			</a>
		{% endfor %}
	</address>
</footer>
