{% macro icon(classes, type, width = "24", height = "24") %}
	<svg class='icon {{ classes }}' width='{{ width }}' height='{{ height }}'>
		<use href="/src/assets/sprite.svg#icon-{{ type }}"/>
	</svg>
{% endmacro %}

