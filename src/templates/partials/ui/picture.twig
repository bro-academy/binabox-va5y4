{% macro picture(classes, webpSrc, pngSrc, jpgSrc, alt, width, height) %}
	{% if pngSrc %}
		{% set fallbackPngSrc = 'src/assets/images/' ~ pngSrc %}
	{% else %}
		{% set fallbackPngSrc = 'src/assets/images/' ~ jpgSrc %}
	{% endif %}

	{% if jpgSrc %}
		{% set fallbackImgSrc = 'src/assets/images/' ~ jpgSrc %}
	{% else %}
		{% set fallbackImgSrc = 'src/assets/images/' ~ pngSrc %}
	{% endif %}

	<picture class="{{ classes }}">
		<source srcset="src/assets/images/{{ webpSrc }}" type="image/webp" width="{{ width }}" height="{{ height }}">
		<source srcset="{{ fallbackPngSrc }}" type="image/png" width="{{ width }}" height="{{ height }}">
		<source srcset="src/assets/images/{{ jpgSrc }}" type="image/jpeg" width="{{ width }}" height="{{ height }}">
		<img src="{{ fallbackImgSrc }}" alt="{{ alt }}" width="{{ width }}" height="{{ height }}">
	</picture>
{% endmacro %}

