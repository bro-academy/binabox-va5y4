<section class="catalog">
	<img src="{{ catalog.icon_src }}" alt="{{ catalog.icon_alt }}" class="catalog__icon">
	<h4 class="catalog__title title">{{ catalog.title }}</h4>
	<a href="{{ catalog.see_all_url }}" class="link catalog__see-all">See all</a>
	<span class="catalog__separator separator"></span>
	<button type="button" aria-label="Previous catalog item" class="catalog__nav-button">&lt;</button>
	<button type="button" aria-label="Next catalog item" class="catalog__nav-button catalog__nav-button--active">&gt;</button>
	<ul class="catalog__list">
		{% for product in catalog.products %}
			{% include './product-card.twig' with { product: product } %}
		{% endfor %}
	</ul>
</section>
